<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/main_activity_image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/mainlogo" />

    <Button
        android:id="@+id/main_activity_button_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_image_logo"
        android:layout_centerHorizontal="true"
        android:text="@string/main_activity_button_patch" />

    <Button
        android:id="@+id/main_activity_button_champ_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_activity_button_about"
        android:layout_centerHorizontal="true"
        android:text="@string/main_activity_button_champions" />

    <Button
        android:id="@+id/main_activity_button_patch_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_button_about"
        android:layout_centerHorizontal="true"
        android:text="@string/main_activity_button_about" />

</RelativeLayout>